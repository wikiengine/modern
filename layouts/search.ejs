<div id="modal-close-default" data-uk-modal>
    <div class="uk-modal-dialog uk-modal-body uk-margin-auto-vertical">
      <button
        class="uk-modal-close absolute right-4 top-4"
        type="button"
        data-uk-close
      ></button>
      <h2 class="uk-modal-title">검색</h2>
      <div class="m-2">
        <form id="searchform" class="form-inline" @submit.prevent x-data="search">
          <div class="input-group">
            <div class="input-search">
              <input x-ref="input" type="search" name="q" placeholder="검색" accesskey="f" class="form-control uk-input" id="searchInput" autocomplete="off" x-model="searchText" @blur="blur" @focus="focus" @input="inputChange" @keydown.enter="keyEnter" @keydown.tab="keyEnter" @keydown.up="keyUp" @keydown.down="keyDown"/>
              <div x-cloak x-show="show" class="v-autocomplete-list">
                <ul x-for="(item, i) in internalItems" class="uk-list uk-list-divider mt-3">
                  <li class="v-autocomplete-list-item" @click="onClickItem(item)" x-bind:key="i" :class="{'v-autocomplete-item-active': i === cursor}" @mouseover="cursor = i">
                    <div x-text="item"></div>
                  </li>
                </ul>
              </div>
            </div>
            <span class="input-group-btn">
            <button type="submit" name="fulltext" value="검색" class="btn btn-secondary" @click="onClickSearch"><span class="fa fa-search"></span></button>
            <button type="submit" name="fulltext" value="보기" class="btn btn-secondary" @click="onClickMove"><span class="fa fa-arrow-right"></span></button>
        </span>
          </div>
        </form>
      </div>
    </div>
</div>