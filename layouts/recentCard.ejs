<div class="bg-card text-card-foreground rounded-xl border shadow w-full md:w-1/4 md:mt-4 md:mr-4">
    <div class="flex flex-col space-y-1.5 p-6 pb-0">
        <div class="font-semibold leading-none tracking-tight flex gap-2 text-xl mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-clock"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
            <a href="/RecentChanges" class="text-black dark:text-white">
                &nbsp;최근 변경
            </a>
        </div>
    </div>
    <div class="p-5 pt-1">
        <div x-show="$store.state.recent.length === 0">
            <p class="text-2xl">문서를 편집해보세요!</p>
        </div>
        <div x-show="$store.state.recent.length > 0">
            <template x-for="(r,i) in $store.state.recent.slice(0, <%=typeof limit === 'undefined' ? 15 : limit%>)" :key="i">
                <ul class="uk-list uk-list-divider">
                    <li class="rounded-xl hover:bg-neutral-200 dark:hover:bg-neutral-900 p-1">
                        <a class="recent-item flex justify-between items-center" :class="{ 'removed': r.status === 'delete' }" :key="r.document" :href="doc_action_link(r.document, 'w')" @click="$store.state.aClickHandler">
                            <span x-text="r.document"></span>
                            <p class="text-black dark:text-white"><time data-type="keep" :datetime="new Date(r.date * 1000).toISOString()" x-text="getDateStr(r.date * 1000)"></time></p>
                        </a>
                    </li>
                </ul>
            </template>
        </div>
    </div>
</div>